{
  "root": true,
  "parser": "babel-eslint",
  "plugins": ["react", "import", "react-hooks", "react-perf"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "standard",
    "standard-react",
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:react-perf/recommended"
  ],
  "rules": {
    "no-unused-vars": [
      "error",
      { "varsIgnorePattern": "^React$", "ignoreRestSiblings": true }
    ],
    "react/prop-types": "warn",
    "react/no-unused-prop-types": "warn",
    "prefer-object-spread": "warn",
    "react-hooks/rules-of-hooks": "error"
  },
  "globals": {
    "process": false
  }
}
